{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "IComponentInfo": {
      "additionalProperties": false,
      "properties": {
        "args": {
          "items": {},
          "type": "array"
        },
        "enabled": {
          "type": "boolean"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "IStyle": {
      "additionalProperties": false,
      "properties": {
        "direction": {
          "type": "string"
        },
        "fill_style": {
          "type": "string"
        },
        "font": {
          "type": "string"
        },
        "font_kerning": {
          "type": "string"
        },
        "font_stretch": {
          "type": "string"
        },
        "font_variant_caps": {
          "type": "string"
        },
        "letter_spacing": {
          "type": "string"
        },
        "line_cap": {
          "type": "string"
        },
        "line_dash_offset": {
          "type": "number"
        },
        "line_join": {
          "type": "string"
        },
        "line_width": {
          "type": "number"
        },
        "miter_limit": {
          "type": "number"
        },
        "padding_b": {
          "type": "number"
        },
        "padding_l": {
          "type": "number"
        },
        "padding_r": {
          "type": "number"
        },
        "padding_t": {
          "type": "number"
        },
        "shadow_blur": {
          "type": "number"
        },
        "shadow_color": {
          "type": "string"
        },
        "shadow_offset_x": {
          "type": "number"
        },
        "shadow_offset_y": {
          "type": "number"
        },
        "smoothing": {
          "type": "boolean"
        },
        "stroke_style": {
          "type": "string"
        },
        "text_align": {
          "enum": [
            "left",
            "right",
            "center",
            "end",
            "start"
          ],
          "type": "string"
        },
        "text_baseline": {
          "type": "string"
        },
        "text_rendering": {
          "type": "string"
        },
        "word_spacing": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "IUIAction": {
      "additionalProperties": false,
      "properties": {
        "args": {
          "items": {},
          "type": "array"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "type": "object"
    },
    "IUIImgInfo": {
      "additionalProperties": false,
      "properties": {
        "dh": {
          "type": "number"
        },
        "dw": {
          "type": "number"
        },
        "h": {
          "type": "number"
        },
        "path": {
          "type": "string"
        },
        "w": {
          "type": "number"
        },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "path",
        "w",
        "h"
      ],
      "type": "object"
    },
    "IUIInfo": {
      "additionalProperties": false,
      "properties": {
        "actions": {
          "additionalProperties": false,
          "properties": {
            "click": {
              "anyOf": [
                {
                  "$ref": "#/definitions/TAction"
                },
                {
                  "items": {
                    "$ref": "#/definitions/TAction"
                  },
                  "type": "array"
                }
              ]
            },
            "pause": {
              "anyOf": [
                {
                  "$ref": "#/definitions/TAction"
                },
                {
                  "items": {
                    "$ref": "#/definitions/TAction"
                  },
                  "type": "array"
                }
              ]
            },
            "resume": {
              "anyOf": [
                {
                  "$ref": "#/definitions/TAction"
                },
                {
                  "items": {
                    "$ref": "#/definitions/TAction"
                  },
                  "type": "array"
                }
              ]
            },
            "start": {
              "anyOf": [
                {
                  "$ref": "#/definitions/TAction"
                },
                {
                  "items": {
                    "$ref": "#/definitions/TAction"
                  },
                  "type": "array"
                }
              ]
            },
            "stop": {
              "anyOf": [
                {
                  "$ref": "#/definitions/TAction"
                },
                {
                  "items": {
                    "$ref": "#/definitions/TAction"
                  },
                  "type": "array"
                }
              ]
            }
          },
          "required": [
            "click"
          ],
          "type": "object"
        },
        "auto_focus": {
          "type": "boolean"
        },
        "center": {
          "anyOf": [
            {
              "items": {
                "type": "number"
              },
              "type": "array"
            },
            {
              "type": "string"
            }
          ]
        },
        "color": {
          "type": "string"
        },
        "component": {
          "anyOf": [
            {
              "$ref": "#/definitions/TComponentInfo"
            },
            {
              "items": {
                "$ref": "#/definitions/TComponentInfo"
              },
              "type": "array"
            }
          ]
        },
        "count": {
          "description": "循环创建次数，默认为1",
          "type": "number"
        },
        "disabled": {
          "type": [
            "boolean",
            "string"
          ]
        },
        "flip_x": {
          "type": "boolean"
        },
        "flip_y": {
          "type": "boolean"
        },
        "id": {
          "description": "节点ID",
          "type": "string"
        },
        "img": {
          "anyOf": [
            {
              "items": {
                "$ref": "#/definitions/IUIImgInfo"
              },
              "type": "array"
            },
            {
              "$ref": "#/definitions/IUIImgInfo"
            }
          ]
        },
        "items": {
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/IUIInfo"
              },
              {
                "type": "string"
              }
            ]
          },
          "type": "array"
        },
        "key_press_actions": {
          "items": {
            "items": [
              {
                "type": "string"
              },
              {
                "$ref": "#/definitions/TAction"
              }
            ],
            "maxItems": 2,
            "minItems": 2,
            "type": "array"
          },
          "type": "array"
        },
        "name": {
          "description": "节点名",
          "type": "string"
        },
        "opacity": {
          "type": "number"
        },
        "pos": {
          "anyOf": [
            {
              "items": {
                "type": "number"
              },
              "type": "array"
            },
            {
              "type": "string"
            }
          ]
        },
        "scale": {
          "anyOf": [
            {
              "items": {
                "type": "number"
              },
              "type": "array"
            },
            {
              "type": "string"
            }
          ]
        },
        "size": {
          "anyOf": [
            {
              "items": {
                "type": "number"
              },
              "type": "array"
            },
            {
              "type": "string"
            }
          ]
        },
        "template": {
          "description": "模板名",
          "type": "string"
        },
        "templates": {
          "additionalProperties": {
            "$ref": "#/definitions/IUIInfo"
          },
          "type": "object"
        },
        "txt": {
          "$ref": "#/definitions/TUITxtInfo"
        },
        "values": {
          "type": "object"
        },
        "visible": {
          "type": [
            "boolean",
            "string"
          ]
        },
        "which": {
          "type": [
            "number",
            "string"
          ]
        }
      },
      "type": "object"
    },
    "IUITxtInfo": {
      "additionalProperties": false,
      "properties": {
        "style": {
          "$ref": "#/definitions/IStyle"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "value"
      ],
      "type": "object"
    },
    "TAction": {
      "anyOf": [
        {
          "$ref": "#/definitions/IUIAction"
        },
        {
          "type": "string"
        }
      ]
    },
    "TComponentInfo": {
      "anyOf": [
        {
          "$ref": "#/definitions/IComponentInfo"
        },
        {
          "type": "string"
        }
      ]
    },
    "TUITxtInfo": {
      "anyOf": [
        {
          "$ref": "#/definitions/IUITxtInfo"
        },
        {
          "type": "string"
        }
      ]
    }
  }
}

