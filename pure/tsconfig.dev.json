{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "outDir": "./dev",
    // "rootDir": "./src",
    "rootDirs": ["./src","../src/LF2"],
    "noUncheckedIndexedAccess": true,
    "typeRoots": [
      "node_modules/@types",
      "./src"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    }
  },
  "include": [
    "src",
    "../../src/LF2"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}