{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    // "rootDir": "./src",
    "rootDirs": [
      "./src",
      "../src/LF2"
    ],
    "noUncheckedIndexedAccess": true,
    "typeRoots": [
      "node_modules/@types",
      "./src"
    ],
    "lib": [
      "DOM",
      "ES2022"
    ],
    "baseUrl": ".",
    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    }
  },
  "include": [
    "src",
    "../../src/LF2"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}